<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
    </style>

    <style name="MainMenuTheme" parent="BaseTheme">
        <item name="android:textViewStyle">@style/MenuTitle</item>
        <item name="android:buttonStyle">@style/MenuButton</item>
    </style>

    <style name="MenuTitle">
        <item name="android:textSize">@dimen/mainMenu_title_textSize</item>
    </style>

    <style name="MenuButton">
        <item name="android:textSize">@dimen/mainMenu_btn_textSize</item>
    </style>

    <style name="SimpleCalcDisplay">
        <item name="android:textSize">@dimen/sCalc_display_textSize</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AdvancedCalcDisplay">
        <item name="android:textSize">@dimen/advCalc_display_textSize</item>
        <item name="maxLines">2</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="SimpleCalcTheme" parent="BaseTheme">
        <item name="android:buttonStyle">@style/SimpleCalcButton</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:textViewStyle">@style/SimpleCalcDisplay</item>
    </style>

    <style name="SimpleCalcButton">
        <item name="android:textSize">@dimen/sCalc_btn_textSize</item>
    </style>

    <style name="AdvancedCalcTheme" parent="BaseTheme">
        <item name="android:buttonStyle">@style/AdvancedCalcButton</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:textViewStyle">@style/AdvancedCalcDisplay</item>
    </style>

    <style name="AdvancedCalcButton">
        <item name="android:textSize">@dimen/advCalc_btn_textSize</item>
    </style>
</resources>
