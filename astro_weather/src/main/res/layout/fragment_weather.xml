<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherFragment_frag_basicWeather"
            android:name="com.android.pam.astro_weather.presentation.view.fragment.BasicWeatherFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherFragment_frag_additionalWeather"
            android:name="com.android.pam.astro_weather.presentation.view.fragment.AdditionalWeatherFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/weatherFragment_frag_forecast"
            android:name="com.android.pam.astro_weather.presentation.view.fragment.ForecastFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
</LinearLayout>