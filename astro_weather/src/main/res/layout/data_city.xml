<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/sfcItem_txv_cityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sfcItem_txv_city"
            tools:text="really long id" />

    <TextView
            android:id="@+id/sfcItem_txv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="city" />

    <TextView
            android:id="@+id/sfcItem_txv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sfcItem_txv_state"
            app:layout_constraintTop_toTopOf="@+id/sfcItem_txv_state"
            tools:text="country" />

    <TextView
            android:id="@+id/sfcItem_txv_state"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:text="@string/fc_state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sfcItem_txv_city"
            app:layout_constraintTop_toTopOf="@+id/sfcItem_txv_city" />

    <TextView
            android:id="@+id/sfcItem_txv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/sfcItem_txv_longitude"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sfcItem_txv_cityId"
            tools:text="latitude" />

    <TextView
            android:id="@+id/sfcItem_txv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="longitude" />
</androidx.constraintlayout.widget.ConstraintLayout>