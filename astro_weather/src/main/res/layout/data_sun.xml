<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/sunFragment_txv_sunrise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <TextView
            android:id="@+id/sunFragment_txv_sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <TextView
            android:id="@+id/sunFragment_txv_sunriseAzimuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <TextView
            android:id="@+id/sunFragment_txv_sunsetAzimuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <TextView
            android:id="@+id/sunFragment_txv_civilDawn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <TextView
            android:id="@+id/sunFragment_txv_civilDusk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
</LinearLayout>